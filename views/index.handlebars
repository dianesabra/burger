<h1 class="text-center">Burgers!</h1>

<div class="container">
  <div class="row">
    <div class="mx-auto">
      <h2>Add a Burger</h2>
    </div>
  </div>
  <div class="row">
    <form class="create-form mx-auto">
      <div class="form-group">
        <div class="form-group row">
          <input type="text" class="form-control" style="width:300px" id="burg" name="name"
            placeholder="Enter Your Burger">
          <button type="submit" class="btn btn-success mx-auto">Add Burger</button>
        </div>
      </div>
    </form>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-sm-6">
      <h2>Burger ready to be devoured!</h2>
      <ul class="list-group">
        {{#each burger}}
        {{#unless devoured}}
        {{> burgers/burger-block devoured=true}}
        {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col-sm-6">
      <h2>Burgers devoured!</h2>
      <ul class="list-group">
        {{#each burger}}
        {{#if devoured}}
        {{> burgers/burger-block devoured=false}}
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
</div>